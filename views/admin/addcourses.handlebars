<div class="container mb-3 pb-4 text-center w-100 d-flex align-items-center justify-content-center">

    <div class="w-100 mt-5 p-5" style="border:solid 1px;border-radius:10px; box-shadow: 4px 4px 3px grey">

        {{#if message}}
        <div class="alert alert-warning alert-dismissible fade show m-4" role="alert">
            <strong>{{message}}</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}
        {{>messages}}

        <form method="POST" action="/course/" class="mx-4">
            <h3><b>Select level</b></h3>
            <select class="form-control mb-3 text-center" name="program" id="" required>
                    <option value="" selected>---Select program---</option>
                    <option value="mathematics">Mathematics</option>
                    <option value="statistics">Statistics</option>
                    <option value="computer science">Computer science</option>
            </select>
            <select class="form-select mb-3" name="level" aria-label="Default select example">
                <option selected>Level</option>
                <option value="100">100</option>
                <option value="200">200</option>
                <option value="300">300</option>
                <option value="400">400</option>
                <option value="500">500</option>
            </select>
            <input type="text" class="form-control mb-3 course" name="courseName" placeholder="course name">
            <input type="text" class="form-control mb-3 course" name="courseCode" placeholder="course code">
            <button type="submit" class="btn btn-danger">Add Course</button>
        </form>
    </div>

</div>