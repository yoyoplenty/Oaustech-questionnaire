<div class="container my-5">
    {{>messages}}
    {{#each question}}
    <div class="text-secondary my-2">
        <h5 class="py-2"><b>{{this.sn }}: {{this.question}}</b> <span><button class="btn btn-sm btn-danger"><a
                        href="/question/edit/{{this.id}}" class="text-white"
                        style="text-decoration: none;"><b>edit</b></a></button>

                <form action="/question/delete/{{this.id}}?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger"><a href="/question/delete/{{this.id}}"
                            onclick="return confirm('Are you sure you want to delete this question?');"
                            class="text-white" style="text-decoration: none;"><b>delete</b></a></button>

                </form>

            </span> </h5>
    </div>
    {{/each}}
</div>