<div class="container my-5">
    {{>messages}}
    <div class="question-row row">
        {{#each courses}}
        <div class="col-sm-2 text-center px-3 py-1 text-secondary my-2 border border-5 rounded">
            <h5 class="py-2"><b>{{this.courseName}}{{this.courseCode}}</b> <span><button
                        class="btn btn-sm btn-danger"><a href="/course/edit/{{this.id}}" class="text-white"
                            style="text-decoration: none;"><b><i class="far fa-edit"
                                    style="font-size: 20px;"></i></b></a></button>

                    <form action="/course/delete/{{this.id}}?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger"><a href="/course/delete/{{this.id}}"
                                onclick="return confirm('Are you sure you want to delete this course?');"
                                class="text-white" style="text-decoration: none;"><b><i class="fas fa-trash-alt"
                                        style="font-size: 20px;"></i></b></a></button>

                    </form>

                </span> </h5>
        </div>
        {{/each}}
    </div>
</div>